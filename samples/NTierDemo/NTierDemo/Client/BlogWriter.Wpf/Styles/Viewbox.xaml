<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Viewbox}" x:Key="Watermark">
        <Setter Property="Margin" Value="0" />
        <Setter Property="Opacity" Value=".05" />
        <Setter Property="Grid.ColumnSpan" Value="99" />
        <Setter Property="Grid.RowSpan" Value="99" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="TextBlock.FontStyle" Value="Normal" />
        <Setter Property="TextBlock.FontWeight" Value="Bold" />
    </Style>
    
</ResourceDictionary>